@model IEnumerable<HotelRepoPatternAssignment.Models.Room>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RoomType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.HotelId)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.RoomNo">Edit</a> 
                <a asp-action="Details" class="btn btn-success" asp-route-id="@item.RoomNo">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.RoomNo">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
