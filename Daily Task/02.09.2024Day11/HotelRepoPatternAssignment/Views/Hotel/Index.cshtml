@model IEnumerable<HotelRepoPatternAssignment.Models.Hotel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HotelName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rooms)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HotelName)
            </td>
            <td>
                    @foreach(var r in item.Rooms)
                    {
                        <p>@r.RoomNo</p>
                    }
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.HotelId">Edit</a> 
                    <a asp-action="Details" class="btn btn-success" asp-route-id="@item.HotelId">Details</a> 
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.HotelId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
