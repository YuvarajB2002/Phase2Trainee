@model IEnumerable<MVCAssessment.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-outline-info" asp-action="Create">Create New</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Posts)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    @foreach(var p in item.Posts)
                    {
                        <p>@p.Title</p>
                    }
            </td>
            <td>
                <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.uId">Edit</a> 
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.uId">Details</a> 
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.uId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
